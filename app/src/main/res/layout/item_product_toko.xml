<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_produk_card"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/imageProduct"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_produk"
        android:background="@drawable/image_rounded"
        android:clipToOutline="true"
        android:contentDescription="Gambar Produk" />

    <TextView
        android:id="@+id/textNamaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Produk"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingTop="6dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/textHargaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textColor="@color/hijau"
        android:textStyle="bold"
        android:textSize="14sp"
        android:paddingTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp">

        <TextView
            android:id="@+id/textTerjual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terjual: 0"
            android:textSize="12sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⭐ 0.0"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
