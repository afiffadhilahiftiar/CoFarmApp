<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutCheckout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">
    <!-- SCROLLABLE CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <!-- HEADER: Info Pembeli -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lokasi"
                app:tint="@color/teal_700"/>
        <TextView
            android:id="@+id/txtLabelAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Pengiriman"
            android:textStyle="bold"
            android:textColor="@color/teal_700"
            android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtNoHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="081234567890"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/txtAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jl. Contoh No.123, Jakarta"
            android:textSize="14sp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- BODY: Daftar Produk per Toko -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCheckout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/txtVoucherLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pilih Voucher"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/teal_700"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/btnPilihVoucher"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:backgroundTint="@android:color/white"
                        android:background="@null"
                        android:src="@drawable/ic_forward"
                        android:contentDescription="Pilih Voucher" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtVoucherTerpilih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Belum ada voucher dipilih"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="0dp" />
            </LinearLayout>

            <!-- METODE PEMBAYARAN -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/txtMetodeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metode Pembayaran"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnPilihMetode"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_forward"

            android:textColor="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>

    <!-- RINCIAN PEMBAYARAN -->
    <LinearLayout
        android:id="@+id/layoutRincianPembayaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="2dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Pembayaran"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/teal_700"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Diskon"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtDiskon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Rp0"
                android:textColor="@color/red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ongkos Kirim"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/txtOngkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/txtTotalPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp0"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FOOTER: Total & Buat Pesanan -->
    <LinearLayout
        android:id="@+id/layoutFooter"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@android:color/white"
        android:elevation="4dp"

        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Total  "
            android:textAlignment="textEnd"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTotalFooter"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:layout_marginStart="0dp"
            android:paddingEnd="8dp"
            android:text="Rp0"
            android:textAlignment="textEnd"

            android:textColor="@color/red"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBuatPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:text="Buat Pesanan"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
