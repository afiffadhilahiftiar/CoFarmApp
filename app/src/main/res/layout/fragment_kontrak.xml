<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/bottomFilterLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="#F1F5F9"
            android:gravity="center_vertical">

            <!-- EditText untuk filter tanggal waktuDibutuhkan -->
            <EditText
                android:id="@+id/etWaktuDibutuhkan"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:hint="Waktu Dibutuhkan"
                android:inputType="date"
                android:clickable="true"
                android:focusable="false"
                android:textColorHint="@color/gray"
                android:padding="8dp"
                android:background="@drawable/edittext_background"
                android:textSize="14sp"/>

            <!-- TextView menampilkan tanggal saat ini -->
            <TextView
                android:id="@+id/tvTanggalSaatIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-09-01"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- EditText untuk jarak hari (number) -->
            <EditText
                android:id="@+id/etJarakHari"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:hint="Jarak (hari)"
                android:background="@drawable/edittext_background"
                android:inputType="numberDecimal"
                android:textColorHint="@color/gray"
                android:padding="8dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Contract Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#F1F5F9"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontrak Aktif"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvActiveContracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#009688"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#F1F5F9"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kontrak Selesai"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/tvCompletedContracts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#607D8B"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notification -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi Pembayaran"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Belum ada"
            android:textColor="#757575"
            android:layout_marginBottom="24dp" />

        <!-- Card: Marketplace Kontrak -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgresKontrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_agenda"
                    app:tint="@color/teal_700"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progres Kontrak"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Kalender Tanam -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardIntro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="6dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#FF9800"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pengenalan Fitur ContractFarming"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: Data Usaha Tani -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardUsahaTani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            card_view:cardElevation="6dp"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:visibility="gone"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_kalkulator"
                    app:tint="#3F51B5"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prediksi Biaya Produksi"
                    android:textSize="16sp"
                    android:textColor="#333333" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Rekomendasi Kontrak Terdekat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar Kontrak"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <!-- RecyclerView untuk menampilkan kontrak -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewKontrak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:scrollbars="vertical"
            android:contentDescription="Daftar kontrak tersedia"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
