<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerusahaanFragment"
    android:background="@color/birumuda">

    <!-- Konten scroll -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_above="@+id/footerLayout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray1"
            android:padding="24dp">
            <LinearLayout
                android:id="@+id/layoutBuatToko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_background"
                android:backgroundTint="@color/teal_700"
                android:padding="5dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Data perusahaan tidak ditemukan.\nKlik untuk membuat perusahaan/kelompok tani baru dan jadilah admin."
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:gravity="top"
                    android:layout_marginStart="8dp"/>

                <Button
                    android:id="@+id/btnBuatToko"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buat Perusahaan/Poktan "
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/red" />

            </LinearLayout>

            <!-- Row: Logo + Edit -->

            <Button
                android:id="@+id/btnGabungPoktan"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:backgroundTint="@color/com_facebook_blue"
                android:text="Gabung Kelompok Tani "
                android:textColor="@color/white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center"
                android:weightSum="3"
                android:background="@drawable/border_background"
                android:layout_marginBottom="0dp">

                <ImageView
                    android:id="@+id/companyLogo"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_marginStart="0dp"
                    android:layout_weight="1"
                    android:contentDescription="Logo Perusahaan"
                    android:src="@drawable/store_icon" />

                <LinearLayout
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Nama Perusahaan -->
                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Nama Perusahaan"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/companyJenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:textAlignment="center"
                        android:text="Jenis perusahaan Anda."
                        android:textColor="@color/teal_700"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/companyRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="13sp"
                        android:textAlignment="center"
                        android:textColor="#FF9800" />
                    <TextView
                        android:id="@+id/companyId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:textAlignment="center"
                        android:text="ID."
                        android:visibility="gone"
                        android:textColor="@color/teal_700"
                        android:textSize="12sp" />
                    <TextView
                        android:id="@+id/companyPeran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:textAlignment="center"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="12sp" />
                </LinearLayout>
                    <ImageButton
                    android:id="@+id/btnEditCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                        android:layout_weight="1"
                    android:src="@drawable/baseline_edit_square_24"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Profil"
                        android:visibility="gone"
                    app:tint="@color/teal_700" />
            </LinearLayout>
            <Button
                android:id="@+id/btnPeta"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/shape_kanan"
                android:backgroundTint="@color/teal_700"
                android:text="Buka Peta Komoditas"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btnPetaPetani"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/shape_kanan"
                android:backgroundTint="@color/teal_700"
                android:text="Buka Peta Komoditas"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="12sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            android:orientation="vertical"

            android:layout_marginBottom="8dp"
            android:padding="8dp">

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/companyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:text="Deskripsi singkat perusahaan Anda."
                android:textSize="10sp"
                android:textAlignment="center"
                android:textColor="@color/gray" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Website -->
            <TextView
                android:id="@+id/companyWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌐 www.perusahaan.com"
                android:textSize="12sp"
                android:clickable="true"
                android:textColor="@color/hijau" />
            <!-- Alamat -->
            <TextView
                android:id="@+id/companyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🗺️ Alamat"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
            <!-- Alamat -->
            <TextView
                android:id="@+id/companyKoordinat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Titik Koordinat"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black" />
            <!-- Sertifikat -->
            <TextView
                android:id="@+id/companyCertificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="📄 Sertifikasi: "
                android:textSize="12sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/companyNomorSk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📑 Nomor SK: -"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:paddingTop="4dp"/>


            <TextView
                android:id="@+id/companyContractsPaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✅ Terbayar: 0"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingTop="4dp"/>


            <!-- Sosial Media -->
            <TextView
                android:id="@+id/companySocialMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="📱 IG: @perusahaan | LinkedIn: Perusahaan"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <!-- Karyawan -->
            <TextView
                android:id="@+id/employeeCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="👥 Jumlah Anggota: "
                android:textSize="12sp"
                android:textColor="@color/black" />
            <!-- Logistik -->
            <TextView
                android:id="@+id/logistikCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="🚚 Jumlah Kendaraan Logistik: "
                android:textSize="12sp"
                android:textColor="@color/black" />
            <!-- Karyawan -->
            <TextView
                android:id="@+id/tractorCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="🚜 Jumlah Traktor: "
                android:textSize="12sp"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/luasLahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="🏞️ Luas Lahan: "
                android:textSize="12sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btnPreviewSk"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/teal_700"
                android:text="🔍 Preview SK"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btnKeluarPoktan"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Keluar Poktan"
                android:backgroundTint="@color/red"
                android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@android:color/white"


                android:layout_marginTop="2dp"/>

        </LinearLayout>
            <!-- Daftar Produk -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="32dp"
                android:visibility="gone"
                android:background="@drawable/border_background">

                <TextView
                    android:id="@+id/titleProducts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🛍️ Produk"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/btnTambahProduk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_box_24"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Tambah Produk"
                    app:tint="@color/teal_700" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:scrollbars="horizontal" />

            <!-- Daftar Kontrak -->
            <LinearLayout
                android:id="@+id/layoutContracts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:background="@drawable/border_background">

                <TextView
                    android:id="@+id/titleContracts"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📄 Kontrak"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/btnTambahKontrak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_add_24"
                    android:background="?android:selectableItemBackgroundBorderless"
                    android:contentDescription="Tambah Kontrak"
                    app:tint="@color/teal_700" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewContracts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:scrollbars="horizontal" />
            <TextView
                android:id="@+id/tvUlasanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ulasan Perusahaan"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUlasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:overScrollMode="never"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer Tombol Aksi -->
    <!-- Footer Tombol Aksi -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_background"
        android:orientation="horizontal"

        android:weightSum="6"
        android:elevation="4dp"
        android:paddingHorizontal="16dp"
        android:gravity="center|top">
        <LinearLayout
            android:id="@+id/layoutAdmin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_dashboard_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Admin"
                app:tint="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Karyawan -->
        <LinearLayout
            android:id="@+id/layoutDaftarKaryawan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDaftarKaryawan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_groups_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Daftar Karyawan"
                app:tint="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anggota"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Logistik -->
        <LinearLayout
            android:id="@+id/layoutDaftarLogistik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDaftarLogistik"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_truck"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Daftar Logistik"
                app:tint="@color/teal_700"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logistik"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutLahan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnLahan"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_lahan"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Lahan"
                app:tint="@color/teal_700"
                android:scaleType="centerInside" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lahan"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Traktor -->
        <LinearLayout
            android:id="@+id/layoutDaftarTraktor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnDaftarTraktor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_agriculture_24"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Daftar Traktor"
                app:tint="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Traktor"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutPesan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnPesanAdmin"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:contentDescription="Chat"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="@color/teal_700" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pesan"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btnKeluarPoktan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keluar Poktan"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
