<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sidebar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Kembali"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:text="Bukti Pembayaran"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:id="@+id/invoiceIdTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invoice ID:"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="8dp"
        android:text="Email: user@example.com"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/paymentMethodTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="8dp"
        android:text="Metode Pembayaran: -"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="16sp" />
    <!-- Top-Up Amount -->
    <TextView
        android:id="@+id/topUpAmountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="8dp"
        android:text="Jumlah Top-Up: Rp0"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/proofImageView"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="16dp"
        android:background="#DDDDDD"
        android:scaleType="centerCrop" />


    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="82dp"
        android:backgroundTint="@color/hijau"
        android:text="Pilih Gambar"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/uploadProofButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="82dp"
        android:backgroundTint="@color/com_facebook_blue"
        android:text="Upload Bukti"
        android:textColor="@color/white" />
</LinearLayout>
