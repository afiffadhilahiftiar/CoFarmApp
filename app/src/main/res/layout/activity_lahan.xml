<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLahan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/toolbar"
    android:padding="16dp">

    <Button
        android:id="@+id/btnTambahLahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Tambah Lahan"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"/>
    <Button
        android:id="@+id/btnPeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Peta"
        android:layout_marginBottom="10dp" />
    <Switch
        android:id="@+id/switchFilterCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Tampilkan hanya lahan perusahaan ini"
        android:layout_margin="16dp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLahan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
