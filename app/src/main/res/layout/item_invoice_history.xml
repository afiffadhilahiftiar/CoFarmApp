<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="18dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/white"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txtId" android:textStyle="bold"
            android:textSize="14sp" android:textColor="#000000"
            android:layout_width="wrap_content" android:layout_height="wrap_content" />

        <TextView android:id="@+id/txtMethod"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"/>

        <TextView android:id="@+id/txtAmount"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/hijau"/>

        <TextView android:id="@+id/txtTimestamp"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"/>

        <TextView android:id="@+id/txtStatus"
            android:textStyle="italic"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#000000"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
